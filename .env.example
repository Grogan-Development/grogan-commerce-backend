# Medusa Core Configuration
# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/medusa-db

# Redis connection string (optional, required for workflow engine)
REDIS_URL=redis://localhost:6379

# Worker mode: "shared" | "worker" | "server" (optional)
# MEDUSA_WORKER_MODE=shared

# CORS Configuration
# Comma-separated list of allowed origins for storefront
STORE_CORS=http://localhost:8000,http://localhost:3000

# Comma-separated list of allowed origins for admin
ADMIN_CORS=http://localhost:7001,http://localhost:9000

# Comma-separated list of allowed origins for auth endpoints
AUTH_CORS=http://localhost:8000,http://localhost:3000

# JWT Secret for token signing (change in production!)
JWT_SECRET=supersecret

# Cookie Secret for session cookies (change in production!)
COOKIE_SECRET=supersecret

# Admin Configuration
# Set to "true" to disable Medusa Admin UI
# DISABLE_MEDUSA_ADMIN=false

# Payment Provider - Stripe
# Either STRIPE_API_KEY or STRIPE_SECRET_KEY can be used
STRIPE_API_KEY=sk_test_...
# STRIPE_SECRET_KEY=sk_test_... (alternative to STRIPE_API_KEY)

# Grok AI Integration
# xAI API key for Grok chat functionality
GROK_API_KEY=xai-...
# Alternative: XAI_API_KEY (both are supported)
# XAI_API_KEY=xai-...

# Grok model to use (optional, defaults to grok-2-1212)
# GROK_MODEL=grok-2-1212

# Notion Integration
# Notion API key for order tracking
NOTION_API_KEY=secret_...

# Notion database ID for orders
NOTION_ORDERS_DATABASE_ID=...

# Node Environment
NODE_ENV=development
